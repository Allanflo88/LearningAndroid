<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.compras.sistemadecompras.ComprasActivity"
    tools:showIn="@layout/activity_compras">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolha seu produto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" />

        <CheckBox
            android:id="@+id/chkArroz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Arroz"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="56dp" />

        <CheckBox
            android:id="@+id/chkLeite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Leite"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="138dp" />

        <CheckBox
            android:id="@+id/chkCarne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Carne"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="97dp" />

        <CheckBox
            android:id="@+id/chkFeijao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Feijao" />

        <Button
            android:id="@+id/btTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total das compras" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
